<dqm4hep>
  
  <!-- Application settings -->
  <settings mode="EventReader">
    <parameter name="EnableStatistics"> true </parameter>
    <parameter name="EventReader"> MuonAndPreshowerFileReader </parameter>
    <parameter name="EventFileName">/lustre/scratch/epp/ilc/tc297/testbeamData/dream/muon-preshower/rec_run3.root</parameter> 
    <parameter name="CyclePeriod"> 1 </parameter>
    <parameter name="CycleCounter"> 0 </parameter>
    <parameter name="CycleTimeout"> 0 </parameter>
    <parameter name="RunControl"> TestRC </parameter>
    <parameter name="EventCollector"> TestEventCollector </parameter>
    <parameter name="EventSource"> TestSource </parameter>
    <parameter name="MonitorElementCollector"> TestMeCollector </parameter>
  </settings>
  
  <!-- Archiver settings -->
  <archiver enable="true">
    <parameter name="FileName" value="muon-dream-archive.root"/>
    <parameter name="OpenMode" value="RECREATE"/>
    <parameter name="AllowOverwrite" value="true"/>
    <parameter name="AppendRunNumber" value="false"/>
    <selectors>
      <selector regex=".*" select="true"/>
    </selectors>    
  </archiver>
  
  <!-- The analysis module goes here -->
  <module type="MuonAndPreshowerDummyModule" name="myMuonAndPreshowerDummyModule"/>

  <!-- Monitor elements in the <storage> tag -->
  <storage>
    <style theme="polar"/>
    <monitorElements>

      <bookElement type="TH1D" path="/" name="x1" title="x1" nBinsX="100" minX="-60" maxX="60">
      </bookElement>
      <bookElement type="TH1D" path="/" name="x2" title="x2" nBinsX="100" minX="-60" maxX="60">
      </bookElement>
      <bookElement type="TH1D" path="/" name="x3" title="x3" nBinsX="100" minX="-60" maxX="60">
      </bookElement>
      <bookElement type="TH1D" path="/" name="x4" title="x4" nBinsX="100" minX="-60" maxX="60">
      </bookElement>

      <bookElement type="TH1D" path="/" name="qx1" title="qx1" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="qx2" title="qx2" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="qx3" title="qx3" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="qx4" title="qx4" nBinsX="100" minX="0" maxX="8000">
      </bookElement>

      <bookElement type="TH1D" path="/" name="nHitx1" title="nHitx1" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="nHitx2" title="nHitx2" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="nHitx3" title="nHitx3" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="nHitx4" title="nHitx4" nBinsX="100" minX="0" maxX="8000">
      </bookElement>

      <bookElement type="TH1D" path="/" name="y1" title="y1" nBinsX="100" minX="-60" maxX="60">
      </bookElement>
      <bookElement type="TH1D" path="/" name="y2" title="y2" nBinsX="100" minX="-60" maxX="60">
      </bookElement>
      <bookElement type="TH1D" path="/" name="y3" title="y3" nBinsX="100" minX="-60" maxX="60">
      </bookElement>
      <bookElement type="TH1D" path="/" name="y4" title="y4" nBinsX="100" minX="-60" maxX="60">
      </bookElement>

      <bookElement type="TH1D" path="/" name="qy1" title="qy1" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="qy2" title="qy2" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="qy3" title="qy3" nBinsX="100" minX="0" maxX="8000">
      </bookElement>
      <bookElement type="TH1D" path="/" name="qy4" title="qy4" nBinsX="100" minX="0" maxX="8000">
